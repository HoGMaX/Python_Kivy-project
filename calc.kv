<BackgroundColor@Widget>
    background_color: 1, 1, 1, 1
    canvas.before:
        Color:
            rgba: root.background_color
        Rectangle:
            size: self.size
            pos: self.pos
<BackgroundLabale@Label+BackgroundColor>
    background_color: 224/255, 224/255, 224/255, 1
    color: 211/255, 159/255, 96/255, 1
    font_size:'28sp'
    size_hint: 1, 1
    text_size: self.size
    halign: 'right'
    valign: 'bottom'
    multiline: 'true'

<NumButton@Button>
    size_hint: .8 , 1
    font_size: '18sp'
    background_color: 44/255, 50/255, 60/255, 1 

<OperatButton@Button>
    size_hint: 1, .8

<Container>

#Buttons Id:
    btn_null: btn_null
    btn_one: btn_one
    btn_two: btn_two
    btn_three: btn_three
    btn_four: btn_four
    btn_five: btn_five
    btn_six: btn_six
    btn_seven: btn_seven
    btn_eigh: btn_eigh
    btn_nine: btn_nine
    #operator button
    btn_mull: btn_mull
    btn_div: btn_div
    btn_sub: btn_sub
    btn_add: btn_add
    btn_eql: btn_eql
    btn_dot: btn_dot

#Labele IO:
    ioLable: ioLable

    

    rows: 2
    size_hint: 1, 1 
    BoxLayout:
        orientation: 'horizontal'
        size_hint: 1 , 1
        BackgroundLabale:
            text: ''
            background_color: 224 / 255, 224 / 255, 224 / 255, 1
            id: ioLable
            
    GridLayout:
        size_hint: 1, 1
        cols: 2
        background_color: 224 / 255, 224 / 255, 224 / 255, 1
        BoxLayout:
            size_hint: 1, .7
            orientation:'vertical'
            BoxLayout:
                orientation: 'horizontal'
                NumButton:
                    id:btn_nine
                    text:'9'
                    on_release: 
                        root.printNumber(btn_nine)
                NumButton:
                    id:btn_eigh
                    text:'8'
                    on_release: 
                        root.printNumber(btn_eigh)
                NumButton:
                    id:btn_seven
                    text:'7'
                    on_release: 
                        root.printNumber(btn_seven)
            BoxLayout:
                orientation: 'horizontal'
                NumButton:
                    id: btn_six
                    text:'6'
                    on_release: 
                        root.printNumber(btn_six)
                NumButton:
                    id:btn_five
                    text:'5'
                    on_release: 
                        root.printNumber(btn_five)
                NumButton:
                    id:btn_four
                    text:'4'
                    on_release: 
                        root.printNumber(btn_four)
                
            BoxLayout:
                orientation: 'horizontal'
                NumButton:
                    id:btn_three
                    text:'3'
                    on_release: 
                        root.printNumber(btn_three)
                NumButton:
                    id:btn_two
                    text:'2'
                    on_release: 
                        root.printNumber(btn_two)
                NumButton:
                    id:btn_one
                    text:'1'
                    on_release: 
                        root.printNumber(btn_one)
            BoxLayout:
                orientation: 'horizontal'
                NumButton:
                    id:btn_null
                    text:'0'
                    on_release: 
                        root.printNumber(btn_null)
                NumButton:
                    id:btn_dot
                    text:'.'
                    on_release: 
                        root.printDot()
                NumButton:
                    id:btn_eql
                    text:'='
                    background_color: 217/255, 187/255, 105/255, 1
                    on_release:
                        root.eqNamber()
        BoxLayout:
            orientation:'vertical'
            size_hint: .25, 1
            OperatButton:
                id:btn_ac
                text:'AC'
                background_color: 196/255, 66/255, 85/255, 1
                on_release:
                    root.clearLabel()
            OperatButton:
                id:btn_mull
                text:'*'
                on_release:
                    root.mullNumber()
            OperatButton:
                id:btn_div
                text:'/'
                on_release:
                    root.divNumber()
            OperatButton:
                id:btn_sub
                text:'-'
                on_release:
                    root.subNumber()
            OperatButton:
                id:btn_add
                text:'+'
                on_release:
                    root.sumNumber()

        